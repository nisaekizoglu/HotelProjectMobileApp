<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HotelProjectMobileApp.Maui.Views.LoginPage"
             Title="Giriş Yap">
    <VerticalStackLayout Padding="30" Spacing="18">
        <Label Text="Giriş Yap"
               FontAttributes="Bold"
               FontSize="26"
               TextColor="DarkRed"
               HorizontalOptions="Center"/>

        <Entry x:Name="entryUsername" Placeholder="Kullanıcı Adı" FontSize="18" BackgroundColor="#FFF5F5F5"/>
        <Entry x:Name="entryPassword" Placeholder="Şifre" FontSize="18" IsPassword="True" BackgroundColor="#FFF5F5F5"/>

        <Button Text="Giriş Yap"
                BackgroundColor="DarkRed"
                TextColor="White"
                FontAttributes="Bold"
                FontSize="18"
                CornerRadius="15"
                HeightRequest="50"
                Clicked="OnLoginClicked"
                HorizontalOptions="FillAndExpand"/>

        <Button Text="Kayıt Ol"
                BackgroundColor="#FFF5F5F5"
                TextColor="DarkRed"
                FontAttributes="Bold"
                FontSize="16"
                CornerRadius="15"
                HeightRequest="45"
                Clicked="OnRegisterClicked"
                HorizontalOptions="FillAndExpand"/>

        <Label x:Name="labelLoginResult"
               Text=""
               FontSize="16"
               TextColor="DarkRed"
               HorizontalOptions="Center"
               Margin="0,10,0,0"/>
    </VerticalStackLayout>
</ContentPage>